{"name":"limited_actor_view","type":"script","scope":"global","author":"Vp8tLYDwBNfFdmoV","img":"icons/svg/dice-target.svg","command":"Hooks.on(\"renderActorSheet\", (actor, html) => {\n    if (game.users.current.isGM) return;\n    const document = actor.document;\n    const _html = html.get(0);\n    if (document.limited) {\n        _html.querySelector(\"div.content\").style.display = \"none\";\n        _html.querySelector(\"div.sidebar\").style.maxWidth = \"100%\";\n        _html.querySelector(\"div.sidebar\").style.borderRight = \"0\";\n        _html.querySelector(\"div.charname-title\").style.paddingTop = \"50px\";\n        _html.querySelector(\"div.charname-title\").style.paddingBottom = \"15px\";\n        _html.querySelector(\"div.portrait\").style.display = \"flex\";\n        _html.querySelector(\"div.portrait\").style.maxHeight = \"calc(100% - 132px)\";\n        _html.querySelector(\"div.portrait\").style.justifyContent = \"center\";\n        _html.querySelector(\"img.profile\").style.objectFit = \"contain\";\n        _html.querySelector(\"span.charname\").innerHTML = document.name;\n    }\n});","flags":{"core":{"sourceId":"Macro.JPRB22NNSc3asbkf"}},"_stats":{"systemId":"coc","systemVersion":"10.274.1","coreVersion":"10.283","createdTime":1661974085306,"modifiedTime":1662057981481,"lastModifiedBy":"Vp8tLYDwBNfFdmoV"},"folder":null,"sort":0,"ownership":{"default":0,"Vp8tLYDwBNfFdmoV":3},"_id":"RYEtvjvQLGfEPNcz"}
